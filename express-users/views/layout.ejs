<!DOCTYPE html>
<html>
  <head>

    <meta charset="utf-8">

    <title><%= title %></title>

    <link rel="stylesheet" href="/stylesheets/style.css">

  </head>
  <body id="layoutBody" class="<%= bodyClass %>">

    <header>
        <h1> Express Users </h1>

        <nav>
          <a href="/"> Home </a>

          <% if (currentUser) { %>

            <a href="/my-rooms"> Your Rooms </a>
            <a href="/rooms/new"> Create a Room </a>
            <a href="/settings"> Edit Profile </a>
            <a href="/logout"> Log Out </a>
            <br />

            <b> <%= currentUser.email %> </b>
          <% } else { %>

            <a href="/signup"> Sign Up </a>
            <a href="/login"> Log In </a>

          <% } %>


        </nav>

      <% if (currentUser && currentUser.role === "admin") { %>

        <h2> Admin Zone </h2>

        <nav>
          <a href="/admin/users"> All users </a>
          <a href="/admin/rooms"> All Rooms </a>
        </nav>
      <% } %>
    </header>

    <%- body %>

    <footer>
      <p>
        Made with ðŸ’ž at Ironhack.
      </p>
    </footer>

    <script href="/javascripts/scripts.js"></script>
  </body>
</html>
