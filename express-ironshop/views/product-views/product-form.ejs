<h2> Add a Product </h2>

<form method="post" action="/products">
  <label for="product-name-input"> Product Name
  </label>
  <input id="product-name-input" type="text" placeholder="e.g. Nintendo Switch" name="ProductName"  />
  <br />

  <label for="product-price-input"> Product Price
  </label>
  <input id="product-price-input" type="number" step="0.10" placeholder="e.g. 299.99" name="ProductPrice"  />
  <br />

  <label for="product-image-input"> Product Image URL
  </label>
  <input id="product-image-input" type="text" placeholder="e.g. http://example.com" name="ProductImage"  />
  <br />

  <label for="product-description-input"> Product Description
  </label>
  <textarea id="product-description-input" type="text" placeholder="e.g. Nintendo Gaming Console" name="ProductDescription">  </textarea>
  <br />

  <button> Save This Product </button>
</form>
